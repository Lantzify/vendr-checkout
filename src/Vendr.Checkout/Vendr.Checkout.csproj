<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
      <TargetFrameworks>net472;net5.0</TargetFrameworks>
      <Authors>Vendr, Outfield Digital Ltd</Authors>
      <Company>Outfield Digital Ltd</Company>
      <Product>Vendr.Checkout</Product>
      <Copyright>Outfield Digital Ltd</Copyright>
      <PackageProjectUrl>https://vendr.net</PackageProjectUrl>
      <PackageIcon>logo-128.png</PackageIcon>
      <PackageTags>umbraco ecommerce vendr</PackageTags>
      <Description>A ready made checkout flow for Vendr, the eCommerce package for Umbraco</Description>
      <RepositoryUrl>https://github.com/vendrhub/vendr-checkout</RepositoryUrl>
      <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net472'">
        <PackageReference Include="UmbracoCms.Web" Version="8.10.3" />
        <PackageReference Include="Vendr.Umbraco.Startup" Version="2.0.0-rc0010" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net5.0'">
        <PackageReference Include="Umbraco.Cms.Web.Website" Version="9.0.0-rc002" />
        <PackageReference Include="Vendr.Umbraco.Startup" Version="2.0.0-rc0010" />
    </ItemGroup>

    <!-- Workaround for this bug (replace the analyzer name with the one you need to exclude (filename only, no extension) -->
    <Target Name="RemoveLuceneAnalyzer" BeforeTargets="CoreCompile">
        <ItemGroup>
            <Analyzer Remove="@(Analyzer)" Condition="%(FileName) == 'Lucene.Net.CodeAnalysis.CSharp'" />
        </ItemGroup>
    </Target>

    <ItemGroup>
        <None Include="..\..\assets\logo-128.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
        <None Include="..\..\LICENSE.md">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
    </ItemGroup>
    
</Project>
